public class HandlingArrays {

    public static void printArray(double [] testArray) {
    		//print text
          System.out.print("printing Array: [");
          //Use a for loop to traverse the array
          for(int i = 0; i < testArray.length; i++) {
          	//If the array is the last digit execute here
          	if(i == testArray.length - 1) {
          		System.out.print(testArray[i]);
          	//If the array is not the last digit execute here
          	} else {
          		System.out.print(testArray[i] + ",");
          	}
          }
     }

    public static double[] sumElements(double [] firstArray, double [] secondArray) {
    	// Define a new array
        double[] thirdArray = new double[firstArray.length];

        // Determine whether the length of firstArray  and secondArray are equal.
		if( firstArray.length != secondArray.length ){
			throw new RuntimeException("Error - Arrays different shape");
        // Perform this step if the length is equal
        } else {
			for (int i = 0; i < firstArray.length; i++) {
				thirdArray[i] = firstArray[i] + secondArray[i];
            }
        }
		return thirdArray;
     }


